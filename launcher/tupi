#!/bin/bash

export TUPI_HOME="/usr/local/tupi2"
export TUPI_SHARE="/usr/local/tupi2/share"
export TUPI_LIB="/usr/local/tupi2/lib"
export TUPI_PLUGIN="/usr/local/tupi2/lib/plugins"
export TUPI_INCLUDE="/usr/local/tupi2/include"
export TUPI_BIN="/usr/local/tupi2/bin"

export LD_LIBRARY_PATH="${TUPI_LIB}:${TUPI_PLUGIN}:$LD_LIBRARY_PATH"

exec ${TUPI_BIN}/tupi.bin $*